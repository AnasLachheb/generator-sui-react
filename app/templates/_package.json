{
  "name": "<%= component_name %>",
  "version": "0.0.0",
  "main": "dist/",
  "scripts": {
    "clean:dist": "rimraf **/dist/*",
    "clean:tmp": "rimraf .tmp/",

    "prebuild": "npm run clean:dist -s",
    "build": "npm run build:scripts && npm run build:styles",
    "build:scripts": "babel src --out-dir dist",
    "build:styles": "node-sass src/index.scss dist/scm-generator-test.css",
    "postinstall": "npm run build",

    "lint": "npm run lint:jscs && npm run lint:eslint && npm run lint:css",
    "lint:jscs": "jscs src/",
    "lint:eslint": "eslint --ext=\".js\" --ext=\".jsx\" src/",
    "lint:css": "node-sass src -o .tmp; rm .tmp/index.css; csslint .tmp",
    "postlint": "npm run clean:tmp",

    "test": "karma start",
    "test:watch": "karma start --autoWatch",

    "dev": "npm run dev:serve && npm run dev:open",
    "dev:serve": "webpack-dev-server --devtool eval --progress --colors --content-base docs/",
    "dev:open": "opener http://localhost:8080"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scm-spain/<%= component_name %>.git"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "@schibstedspain/pre-commit-reactjs": "^2.2.0",
    "babel": "^5.5.6",
    "babel-eslint": "~3.1.14",
    "babel-jscs": "^1.0.1",
    "babel-loader": "^5.1.4",
    "css-loader": "^0.14.5",
    "csslint": "^0.10.0",
    "eslint": "~0.22.1",
    "eslint-plugin-react": "~2.5.0",
    "expect": "^1.6.0",
    "http-server": "^0.8.0",
    "jscs": "~1.13.1",
    "karma": "^0.12.33",
    "karma-chrome-launcher": "^0.1.12",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-spec-reporter": "0.0.19",
    "karma-webpack": "^1.5.1",
    "live-reload": "^1.1.0",
    "lodash": "^3.9.3",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.1.2",
    "opener": "^1.4.1",
    "phantomjs-polyfill": "0.0.1",
    "react-hot-loader": "^1.2.7",
    "rimraf": "^2.4.0",
    "sass-loader": "^1.0.2",
    "style-loader": "^0.12.3",
    "webpack": "^1.9.11",
    "webpack-dev-server": "^1.9.0"
  }
}
