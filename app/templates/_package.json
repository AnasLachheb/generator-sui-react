{
  "name": "<%= component_name %>",
  "version": "0.0.0",
  "main": "dist/",
  "scripts": {
    "clean": "rimraf **/dist/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts -s && npm run build:styles -s",
    "build:scripts": "browserify -t babelify --extension .jsx docs/index.jsx -o docs/dist/index.js -u node_modules",
    "build:styles": "node-sass src/index.scss docs/dist/<%= component_name %>.css",
    "test": "karma start --singleRun",
    "watch": "parallelshell 'npm run watch:test -s' 'npm run watch:build -s'",
    "watch:test": "karma start",
    "watch:build": "nodemon -q -w src/ --ext '.' --exec 'npm run build'",
    "open:dev": "opener http://localhost:1337",
    "serve": "http-server -p 1337 docs/",
    "live-reload": "live-reload --port 1338 docs/",
    "dev": "npm run open:dev -s & parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch -s'",
    
    "lint": "npm run lint:jscs && npm run lint:eslint",
    "lint:jscs": "jscs src/",
    "lint:eslint": "eslint --ext=\".js\" --ext=\".jsx\" src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scm-spain/<%= component_name %>.git"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "acorn": "^1.2.2",
    "babel": "^5.5.6",
    "babel-eslint": "~3.1.14",
    "babelify": "^6.1.2",
    "babel-jscs": "^1.0.1",
    "browserify": "^10.2.4",
    "expect": "^1.6.0",
    "jscs": "~1.13.1",
    "eslint": "~0.22.1",
    "eslint-plugin-react": "~2.5.0",
    "http-server": "^0.8.0",
    "karma": "^0.12.33",
    "karma-browserify": "^4.1.2",
    "karma-chrome-launcher": "^0.1.12",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-spec-reporter": "0.0.19",
    "live-reload": "^1.1.0",
    "lodash": "^3.9.3",
    "mocha": "^2.2.5",
    "node-sass": "^3.1.2",
    "nodemon": "^1.3.7",
    "opener": "^1.4.1",
    "parallelshell": "^1.1.1",
    "phantomjs-polyfill": "0.0.1",
    "watchify": "^3.2.2",
    "@schibstedspain/pre-commit-reactjs": "^2.0.0"
  }
}
